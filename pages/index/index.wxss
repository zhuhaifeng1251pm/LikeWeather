.weather {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.weather .real-time-temperature {
  width: 100%;
  color: #fc8e00;
  font-size: 50rpx;
  padding: 0 20rpx;
}
.weather .real-time-temperature .temperature-date {
  width: 100%;
  display: flex;
  align-items: flex-end;
}
.weather .real-time-temperature .temperature-date .temperature {
  font-size: 150rpx;
}
.weather .real-time-temperature .temperature-date .date {
  margin-left: 200rpx;
}
.weather .real-time-temperature .details {
  display: flex;
  width: 100%;
  flex-direction: column;
  font-size: 30rpx;
  color: orange;
  padding: 0 20rpx;
  letter-spacing: 2px;
}
#swipers {
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  color: #fff;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  padding-top: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
}
.weather .other-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 260rpx;
  justify-content: space-between;
}
.weather .other-info .other-day {
  width: 100%;
  display: flex;
  line-height: 80rpx;
  padding-left: 10rpx;
  background-color: rgba(255, 255, 255, 0.5);
}
.weather .other-info .other-day > text {
  margin-left: 20rpx;
}
.weather .musics {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 20rpx;
  right: 20rpx;
}
.active {
  animation: looping 2s linear infinite;
}
@keyframes looping {
  0% {
    transform: rotate(0) scale(1);
  }
  25% {
    transform: rotate(90deg) scale(1.5);
  }
  50% {
    transform: rotate(180deg) scale(2);
  }
  75% {
    transform: rotate(270deg) scale(1.5);
  }
  100% {
    transform: rotate(360deg) scale(1);
  }
}
